@page "/pages/listusers"
@model HashtilERP.Server.Pages.ListUsersModel


<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
<body style="text-align:right">



    @{
        ViewData["Title"] = "רשימת משתמשים";
    }

    <h1>כל המשתמשים</h1>
    <div class="card-header">
        <a class="btn btn-success" href="/authentication/register" style="width:auto">משתמש חדש</a>
    </div>
    @if (Model.users.Any())
    {
        foreach (var user in Model.users)
        {
            <div class="card mb-3">
                <div class="card-header">
                    משתמש: @user.UserName
                </div>              
                <div class="card-footer" dir="rtl">
                    <a class="btn btn-primary" style="width:auto" asp-page="edituser" asp-route-Id="@user.Id">עריכה</a>
                    <a href="editrole/@user.Id" class="btn btn-danger" style="width:auto">מחיקה</a>
                </div>
            </div>
        }

    }
    else
    {
        <div class="card">
            <div class="card-header">
                אין תפקידים
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    הוסף תפקיד
                </h5>
                <a class="btn btn-primary" href="/pages/creatrole" style="width:auto">הוספת תפקיד</a>
            </div>

        </div>
    }

</body>
</html>