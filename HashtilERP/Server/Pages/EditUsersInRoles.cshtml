@page "/pages/editusersinroles/{roleId}"


@model HashtilERP.Server.Pages.EditUsersInRolesModel

@{
    
    var roleId = PageContext.ViewData;
}

<form method="post" asp-page="EditUsersInRoles">
    <div class="card">
        <div class="card-header">
            <h2>Add Or Remove Users From This Role</h2>
        </div>
        <div class="card-body">
            @for(int i=0;i<Model.Users.Count;i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.Users[i].IsSelected" class="form-check-input"/>
                    <input type="hidden" asp-for="@Model.Users[i].UserId" />
                    <input type="hidden" asp-for="@Model.Users[i].UserName" />
                    <label class="form-check-label" asp-for="@Model.Users[i].UserName">
                        @Model.Users[i].UserName
                    </label>
                </div>
                
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" style="width:auto" />
           
            <a asp-page="listroles"  class="btn btn-danger" style="width:auto">Cancel</a>

        </div>
    </div>
</form>