@page "/pages/editrole/{id}"


@model HashtilERP.Server.Pages.EditRoleModel

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>
<hr />
<form method="post">
    <div class="form-group row">
        <label asp-for="Input.Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="role.Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Input.RoleName" class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Input.RoleName" value="@Model.role.Name" class="form-control"/>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" >Update</button>
            <a  class="btn btn-danger"  href="/Pages/ListRoles">Cancel</a>
        </div>
    </div>

</form>
<div class="card">
    <div class="card-header">
        <h3>Users In this Role</h3>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">None At this Moment</h5>
        }
    </div>
    <div class="card-footer">
        <a href="#" class="btn btn-primary">Update</a>
        <a href="#" class="btn btn-danger">Delete</a>

    </div>
</div>


